end

-- Fungsi untuk menambah efek radiant
local function addRadiant()
    for _, part in pairs(character:GetDescendants()) do
        if part:IsA("BasePart") then
            local pointLight = Instance.new("PointLight")
            pointLight.Name = "RadiantLight"
            pointLight.Brightness = brightness * 2
            pointLight.Range = brightness * 15
            pointLight.Color = Color3.fromRGB(255, 255, 255)
            pointLight.Parent = part
            table.insert(radiantParts, pointLight)
            
            local surfaceLight = Instance.new("SurfaceLight")
            surfaceLight.Name = "RadiantSurface"
            surfaceLight.Brightness = brightness
            surfaceLight.Range = brightness * 10
            surfaceLight.Color = Color3.fromRGB(255, 255, 255)
            surfaceLight.Parent = part
            table.insert(radiantParts, surfaceLight)
        end
    end
end

-- Fungsi untuk menghapus efek radiant
local function removeRadiant()
    for _, light in pairs(radiantParts) do
        if light then
            light:Destroy()
        end
    end
    radiantParts = {}
end

-- Fungsi untuk update brightness
local function updateBrightness()
    for _, light in pairs(radiantParts) do
        if light and light:IsA("PointLight") then
            light.Brightness = brightness * 2
            light.Range = brightness * 15
        elseif light and light:IsA("SurfaceLight") then
            light.Brightness = brightness
            light.Range = brightness * 10
        end
    end
end

-- Buat GUI
local gui, mainFrame, toggleBtn, toggleBg, statusDot, brightnessValue, sliderFrame, sliderFill, sliderButton, minimizeBtn, closeBtn, contentFrame, shadowFrame, accentLine = createGui()

-- Toggle functionality
toggleBtn.MouseButton1Click:Connect(function()
    radiantEnabled = not radiantEnabled
    if radiantEnabled then
        game:GetService("TweenService"):Create(toggleBtn, TweenInfo.new(0.2), {Position = UDim2.new(1, -16, 0.5, -7)}):Play()
        game:GetService("TweenService"):Create(toggleBg, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(88, 101, 242)}):Play()
        statusDot.BackgroundColor3 = Color3.fromRGB(67, 181, 129)
        addRadiant()
    else
        game:GetService("TweenService"):Create(toggleBtn, TweenInfo.new(0.2), {Position = UDim2.new(0, 2, 0.5, -7)}):Play()
        game:GetService("TweenService"):Create(toggleBg, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(48, 48, 54)}):Play()
        statusDot.BackgroundColor3 = Color3.fromRGB(240, 71, 71)
        removeRadiant()
    end
end)

-- Slider functionality
local dragging = false
sliderButton.MouseButton1Down:Connect(function()
    dragging = true
end)

game:GetService("UserInputService").InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = false
    end
end)

game:GetService("RunService").RenderStepped:Connect(function()
    if dragging then
        local mouse = player:GetMouse()
        local relativeX = math.clamp(mouse.X - sliderFrame.AbsolutePosition.X, 0, sliderFrame.AbsoluteSize.X)
        local percentage = relativeX / sliderFrame.AbsoluteSize.X
        brightness = math.clamp(percentage * 3, 0.1, 3)
        
        sliderFill.Size = UDim2.new(percentage, 0, 1, 0)
        brightnessValue.Text = string.format("%.1fx", brightness)
        
        if radiantEnabled then
            updateBrightness()
        end
    end
end)

-- Button hover effects
minimizeBtn.MouseEnter:Connect(function()
    game:GetService("TweenService"):Create(minimizeBtn, TweenInfo.new(0.15), {BackgroundColor3 = Color3.fromRGB(52, 52, 60)}):Play()
end)
minimizeBtn.MouseLeave:Connect(function()
    game:GetService("TweenService"):Create(minimizeBtn, TweenInfo.new(0.15), {BackgroundColor3 = Color3.fromRGB(40, 40, 46)}):Play()
end)

closeBtn.MouseEnter:Connect(function()
    game:GetService("TweenService"):Create(closeBtn, TweenInfo.new(0.15), {BackgroundColor3 = Color3.fromRGB(240, 71, 71)}):Play()
end)
closeBtn.MouseLeave:Connect(function()
    game:GetService("TweenService"):Create(closeBtn, TweenInfo.new(0.15), {BackgroundColor3 = Color3.fromRGB(40, 40, 46)}):Play()
end)

-- Minimize functionality
local minimized = false
minimizeBtn.MouseButton1Click:Connect(function()
    minimized = not minimized
    if minimized then
        game:GetService("TweenService"):Create(mainFrame, TweenInfo.new(0.2), {Size = UDim2.new(1, -8, 0, 28)}):Play()
        game:GetService("TweenService"):Create(shadowFrame, TweenInfo.new(0.2), {Size = UDim2.new(0, 296, 0, 36)}):Play()
        contentFrame.Visible = false
        accentLine.Visible = false
        minimizeBtn.Text = "□"
    else
        game:GetService("TweenService"):Create(mainFrame, TweenInfo.new(0.2), {Size = UDim2.new(1, -8, 1, -8)}):Play()
        game:GetService("TweenService"):Create(shadowFrame, TweenInfo.new(0.2), {Size = UDim2.new(0, 296, 0, 156)}):Play()
        wait(0.1)
        contentFrame.Visible = true
        accentLine.Visible = true
        minimizeBtn.Text = "_"
    end
end)

-- Close functionality
closeBtn.MouseButton1Click:Connect(function()
    game:GetService("TweenService"):Create(mainFrame.Parent, TweenInfo.new(0.15), {Size = UDim2.new(0, 0, 0, 0)}):Play()
    wait(0.15)
    removeRadiant()
    gui:Destroy()
end)

-- Respawn handler
player.CharacterAdded:Connect(function(newChar)
    character = newChar
    removeRadiant()
    if radiantEnabled then
        wait(0.5)
        addRadiant()
    end
end)

print("Radiant Body Script Loaded! Compatible with Delta Executor Android")
