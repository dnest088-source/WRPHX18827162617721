    brightnessLabel.TextColor3 = Color3.fromRGB(160, 164, 180)
    brightnessLabel.TextSize = 13
    brightnessLabel.Font = Enum.Font.Code
    brightnessLabel.TextXAlignment = Enum.TextXAlignment.Left
    brightnessLabel.Parent = brightContainer
    
    -- Brightness Value
    local brightnessValue = Instance.new("TextLabel")
    brightnessValue.Name = "Value"
    brightnessValue.Size = UDim2.new(0.4, 0, 0, 20)
    brightnessValue.Position = UDim2.new(0.6, 0, 0, 8)
    brightnessValue.BackgroundTransparency = 1
    brightnessValue.Text = "1.0x"
    brightnessValue.TextColor3 = Color3.fromRGB(88, 101, 242)
    brightnessValue.TextSize = 13
    brightnessValue.Font = Enum.Font.Code
