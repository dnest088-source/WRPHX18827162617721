    addLog("âœ… HD Admin complete!", Color3.fromRGB(100, 255, 100))
    updateStatus("Complete!", Color3.fromRGB(100, 255, 100))
end

-- Create Buttons
local function createButton(text, row, col, color, callback)
    local button = Instance.new("TextButton")
    local btnWidth = (ButtonsFrame.AbsoluteSize.X - 10) / 2
    local xPos = col == 1 and 0 or (btnWidth + 10)
    local yPos = (row - 1) * 42
    
    button.Size = UDim2.new(0, btnWidth - 5, 0, 38)
    button.Position = UDim2.new(0, xPos, 0, yPos)
    button.BackgroundColor3 = color
    button.Text = text
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.TextSize = 13
    button.Font = Enum.Font.GothamBold
    button.BorderSizePixel = 0
    button.Parent = ButtonsFrame
    
    local btnCorner = Instance.new("UICorner")
    btnCorner.CornerRadius = UDim.new(0, 8)
    btnCorner.Parent = button
    
    button.MouseEnter:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.2), {
            BackgroundColor3 = Color3.new(color.R * 1.3, color.G * 1.3, color.B * 1.3),
            Size = UDim2.new(0, btnWidth - 3, 0, 40)
        }):Play()
    end)
    
    button.MouseLeave:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.2), {
            BackgroundColor3 = color,
            Size = UDim2.new(0, btnWidth - 5, 0, 38)
        }):Play()
    end)
    
    button.MouseButton1Click:Connect(callback)
    return button
end

