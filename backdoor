-- Variables
local logContent = ""

-- Functions
local function addLog(text, color)
    local timestamp = os.date("%H:%M:%S")
    local colorCode = color or Color3.fromRGB(200, 200, 200)
    
    local r, g, b = math.floor(colorCode.R * 255), math.floor(colorCode.G * 255), math.floor(colorCode.B * 255)
    local colorTag = string.format('<font color="rgb(%d,%d,%d)">', r, g, b)
    
    logContent = logContent .. colorTag .. "[" .. timestamp .. "] " .. text .. "</font>\n"
    LogText.Text = logContent
    
    LogFrame.CanvasSize = UDim2.new(0, 0, 0, LogText.TextBounds.Y + 20)
    LogFrame.CanvasPosition = Vector2.new(0, LogFrame.CanvasSize.Y.Offset)
    
    print("[BACKDOOR] " .. text)
end

local function updateStatus(text, color)
    StatusLabel.Text = "ğŸ“Š " .. text
    StatusLabel.TextColor3 = color or Color3.fromRGB(200, 200, 200)
end

local function notify(title, text)
    pcall(function()
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = title;
            Text = text;
            Duration = 3;
        })
    end)
end

-- Fungsi untuk menemukan Broadcast Remote asli game
local function FindGameBroadcastRemote()
    addLog("ğŸ” Searching for game's broadcast system...", Color3.fromRGB(100, 200, 255))
    
    local broadcastRemotes = {}
    local searchLocations = {ReplicatedStorage, Workspace, game.Lighting}
    
    for _, location in pairs(searchLocations) do
        pcall(function()
            for _, obj in pairs(location:GetDescendants()) do
                local name = string.lower(obj.Name)
                
                if obj:IsA("RemoteEvent") or obj:IsA("RemoteFunction") then
                    if string.find(name, "broadcast") or 
                       string.find(name, "announce") or 
                       string.find(name, "message") or
                       string.find(name, "notification") or
                       string.find(name, "hint") or
                       string.find(name, "alert") then
                        table.insert(broadcastRemotes, obj)
                        addLog("âœ“ Found: " .. obj.Name .. " (" .. obj.ClassName .. ")", Color3.fromRGB(100, 255, 100))
                    end
                end
            end
        end)
    end
    
    addLog("Total broadcast remotes: " .. #broadcastRemotes, Color3.fromRGB(255, 200, 100))
    return broadcastRemotes
end

-- Fungsi untuk broadcast menggunakan sistem game
local function GameBroadcast(message)
    if not message or message == "" then
        addLog("âŒ Message is empty!", Color3.fromRGB(255, 100, 100))
        updateStatus("Error: Empty message", Color3.fromRGB(255, 100, 100))
        notify("Error", "Please enter a message!")
        return false
    end
    
    addLog("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•", Color3.fromRGB(255, 255, 255))
    addLog("ğŸ“¢ GAME BROADCAST STARTING...", Color3.fromRGB(100, 255, 255))
    updateStatus("Broadcasting via game system...", Color3.fromRGB(100, 200, 255))
    
    local remotes = FindGameBroadcastRemote()
    local successCount = 0
    
    if #remotes == 0 then
        addLog("âš ï¸ No broadcast remotes found!", Color3.fromRGB(255, 200, 100))
        addLog("Trying alternative methods...", Color3.fromRGB(255, 255, 100))
    end
    
    -- Fire all found broadcast remotes
    for _, remote in pairs(remotes) do
        pcall(function()
            if remote:IsA("RemoteEvent") then
                remote:FireServer(message)
                remote:FireServer("broadcast", message)
                remote:FireServer("Broadcast", message)
                remote:FireServer({Message = message})
                remote:FireServer({message = message})
                remote:FireServer({Text = message})
                addLog("ğŸ”¥ Fired: " .. remote.Name, Color3.fromRGB(255, 150, 100))
                successCount = successCount + 1
            elseif remote:IsA("RemoteFunction") then
                remote:InvokeServer(message)
                remote:InvokeServer("broadcast", message)
                addLog("âš¡ Invoked: " .. remote.Name, Color3.fromRGB(150, 255, 255))
                successCount = successCount + 1
            end
        end)
        wait(0.05)
    end
    
    -- Try common broadcast patterns
    local commonNames = {"BroadcastMessage", "SendMessage", "Announce", "Notification", "ServerMessage"}
    
    for _, name in pairs(commonNames) do
        pcall(function()
            local remote = ReplicatedStorage:FindFirstChild(name, true)
            if remote and (remote:IsA("RemoteEvent") or remote:IsA("RemoteFunction")) then
                if remote:IsA("RemoteEvent") then
                    remote:FireServer(message)
                    addLog("ğŸ¯ Pattern: " .. name, Color3.fromRGB(255, 200, 100))
                    successCount = successCount + 1
                end
            end
        end)
    end
    
    -- Try chat system
    pcall(function()
        local chatEvents = ReplicatedStorage:FindFirstChild("DefaultChatSystemChatEvents")
        if chatEvents then
            local sayRequest = chatEvents:FindFirstChild("SayMessageRequest")
            if sayRequest then
                sayRequest:FireServer("/broadcast " .. message, "All")
                sayRequest:FireServer("/m " .. message, "All")
                addLog("ğŸ’¬ Chat injection attempted", Color3.fromRGB(200, 150, 255))
                successCount = successCount + 1
            end
        end
    end)
    
    addLog("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•", Color3.fromRGB(255, 255, 255))
    
    if successCount > 0 then
        addLog("âœ… Broadcast sent via " .. successCount .. " methods!", Color3.fromRGB(100, 255, 100))
        updateStatus("Broadcast sent successfully!", Color3.fromRGB(100, 255, 100))
        notify("Success!", "Broadcast sent!")
        return true
    else
        addLog("âŒ No valid broadcast system found", Color3.fromRGB(255, 100, 100))
        updateStatus("Failed - Try other methods", Color3.fromRGB(255, 100, 100))
        notify("Failed", "No broadcast system found")
        return false
    end
end

-- Backdoor Functions
local function FindBackdoors()
    local backdoors = {}
    local searchLocations = {ReplicatedStorage, Workspace, game.Lighting}
    
    addLog("ğŸ” Starting backdoor scan...", Color3.fromRGB(100, 200, 255))
    
    for _, location in pairs(searchLocations) do
        pcall(function()
            for _, obj in pairs(location:GetDescendants()) do
                if obj:IsA("ModuleScript") then
                    for _, name in pairs(BACKDOOR_NAMES) do
                        if string.find(string.lower(obj.Name), string.lower(name)) then
                            table.insert(backdoors, {Type = "Module", Object = obj})
                            addLog("âœ“ Module: " .. obj.Name, Color3.fromRGB(255, 200, 100))
                        end
                    end
                end
                
                if obj:IsA("RemoteEvent") then
                    local name = string.lower(obj.Name)
                    if string.find(name, "admin") or string.find(name, "owner") or 
                       string.find(name, "remote") or string.find(name, "command") then
                        table.insert(backdoors, {Type = "Remote", Object = obj})
                        addLog("âœ“ Remote: " .. obj.Name, Color3.fromRGB(255, 150, 255))
                    end
                end
                
                if obj:IsA("RemoteFunction") then
                    table.insert(backdoors, {Type = "Function", Object = obj})
                    addLog("âœ“ Function: " .. obj.Name, Color3.fromRGB(150, 255, 255))
                end
            end
        end)
    end
    
    addLog("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•", Color3.fromRGB(255, 255, 255))
    addLog("Total found: " .. #backdoors .. " backdoors", Color3.fromRGB(100, 255, 100))
    
    return backdoors
end

