-- Broadcast Button Event (di title bar)
BroadcastButton.MouseButton1Click:Connect(function()
    local msg = MessageBox.Text
    if msg == "" then
        notify("Warning", "Please enter a message first!")
        updateStatus("Warning: Empty message", Color3.fromRGB(255, 200, 100))
        return
    end
    
    GameBroadcast(msg)
    MessageBox.Text = ""
end)

BroadcastButton.MouseEnter:Connect(function()
    TweenService:Create(BroadcastButton, TweenInfo.new(0.2), {
        BackgroundColor3 = Color3.fromRGB(50, 200, 100),
        Size = UDim2.new(0, 125, 0, 42)
    }):Play()
end)

